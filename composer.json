{
    "name": "cheppers/robo-phpcs",
    "description": "Robo task wrapper for PHPCS",
    "type": "library",
    "license": "GPL-2.0+",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    },
    "require": {
        "squizlabs/php_codesniffer": "^2.6",
        "consolidation/robo": "1.0.0-RC2",
        "cheppers/asset-jar": "^0.0.1"
    },
    "require-dev": {
        "cheppers/git-hooks": "^0.0.8",
        "codeception/codeception": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "Cheppers\\Robo\\Phpcs\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@deploy-git-hooks"
        ],
        "post-update-cmd": [
            "@deploy-git-hooks"
        ],
        "deploy-git-hooks": "\\Cheppers\\GitHooks\\Main::deploy"
    }
}
