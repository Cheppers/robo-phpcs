{
    "name": "cheppers/robo-phpcs",
    "description": "Robo task wrapper for PHPCS",
    "type": "library",
    "license": "GPL-2.0+",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin"
    },
    "require": {
        "squizlabs/php_codesniffer": "^2.6",
        "consolidation/robo": "dev-master#628f807dc6e321ba858cadc00eecc6a40a99efa9"
    },
    "require-dev": {
        "cheppers/git-hooks": "^0.0.8",
        "codeception/codeception": "^2.2",
        "satooshi/php-coveralls": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Cheppers\\Robo\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@deploy-git-hooks"
        ],
        "post-update-cmd": [
            "@deploy-git-hooks"
        ],
        "deploy-git-hooks": "\\Cheppers\\GitHooks\\Main::deploy",
        "test": "phpdbg -qrr bin/codecept run --coverage --coverage-xml --coverage-html"
    }
}
